{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pink",
  "version": "0.1.0",
  "identifier": "com.oxis.pink",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pink",
        "width": 1200,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 680,
        "decorations": false,
        "resizable": true,
        "center": true
      },
      {
        "label": "overlay",
        "title": "Pink Overlay",
        "url": "overlay.html",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}